// src/components/sections/PartnersSection.astro
// Sección de aliados y partners del sistema S.A.I.
---

<section class="py-16 bg-gray-50 sm:py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
        Nuestros Aliados y Partners
      </h2>
      <p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
        Trabajamos junto a instituciones reconocidas y organizaciones comprometidas 
        con la innovación y la protección del medio ambiente.
      </p>
    </div>
    
    <!-- Partners Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
      
      <!-- Partner 1: AlterMundi -->
      <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300 group">
        <div class="flex flex-col items-center text-center">
          <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mb-4 group-hover:bg-green-200 transition-colors duration-300">
            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">AlterMundi</h3>
          <p class="text-sm text-gray-600">
            Redes comunitarias y tecnología para el desarrollo local
          </p>
        </div>
      </div>
      
      <!-- Partner 2: INTI -->
      <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300 group">
        <div class="flex flex-col items-center text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mb-4 group-hover:bg-blue-200 transition-colors duration-300">
            <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">INTI</h3>
          <p class="text-sm text-gray-600">
            Instituto Nacional de Tecnología Industrial
          </p>
        </div>
      </div>
      
      <!-- Partner 3: Bomberos -->
      <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300 group">
        <div class="flex flex-col items-center text-center">
          <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mb-4 group-hover:bg-red-200 transition-colors duration-300">
            <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Bomberos</h3>
          <p class="text-sm text-gray-600">
            Asociación de Bomberos Voluntarios de Córdoba
          </p>
        </div>
      </div>
      
      <!-- Partner 4: Universidades -->
      <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300 group">
        <div class="flex flex-col items-center text-center">
          <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mb-4 group-hover:bg-purple-200 transition-colors duration-300">
            <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Universidades</h3>
          <p class="text-sm text-gray-600">
            UNC, UTN - Investigación y desarrollo
          </p>
        </div>
      </div>
    </div>
    
    <!-- Support Section -->
    <div class="bg-white rounded-2xl p-8 shadow-lg">
      <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">
        Apoyan el Proyecto
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        
        <!-- Support 1: Gobierno -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">Gobierno Provincial</h4>
          <p class="text-sm text-gray-600">
            Ministerio de Ciencia y Tecnología de Córdoba
          </p>
        </div>
        
        <!-- Support 2: Organizaciones -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">ONGs Ambientales</h4>
          <p class="text-sm text-gray-600">
            Fundación Vida Silvestre, Greenpeace Argentina
          </p>
        </div>
        
        <!-- Support 3: Sector Privado -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">Sector Privado</h4>
          <p class="text-sm text-gray-600">
            Empresas de seguros y forestales
          </p>
        </div>
      </div>
    </div>
    
    <!-- Call to Partnership -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-orange-500 to-red-600 rounded-2xl p-8 text-white">
        <h3 class="text-2xl font-bold mb-4">
          ¿Quieres ser parte de la solución?
        </h3>
        <p class="text-lg mb-6 opacity-90">
          Si representas una institución, empresa u organización interesada en apoyar 
          el desarrollo del Sistema S.A.I., nos encantaría conocerte.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-4">
          <a href="mailto:partnerships@sistemasai.com" 
             class="inline-flex items-center px-6 py-3 bg-white text-orange-600 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-200">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Contactar para Partnership
          </a>
          <a href="tel:+5435112345678" 
             class="inline-flex items-center px-6 py-3 bg-transparent border-2 border-white text-white rounded-lg font-semibold hover:bg-white hover:text-orange-600 transition-colors duration-200">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Llamar Ahora
          </a>
        </div>
      </div>
    </div>
    
    <!-- Certifications -->
    <div class="mt-16">
      <h3 class="text-xl font-bold text-gray-900 mb-8 text-center">
        Certificaciones y Reconocimientos
      </h3>
      
      <div class="flex flex-wrap items-center justify-center gap-8 opacity-60">
        
        <!-- Cert 1: ISO -->
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">ISO 9001</span>
        </div>
        
        <!-- Cert 2: Innovation -->
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">Premio Innovación 2024</span>
        </div>
        
        <!-- Cert 3: Environmental -->
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-emerald-600 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">Certificado Ambiental</span>
        </div>
        
        <!-- Cert 4: Tech -->
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-purple-600 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">Sello Tech Argentina</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animaciones hover */
  .group:hover .group-hover\:bg-green-200 {
    background-color: #bbf7d0;
  }
  
  .group:hover .group-hover\:bg-blue-200 {
    background-color: #bfdbfe;
  }
  
  .group:hover .group-hover\:bg-red-200 {
    background-color: #fecaca;
  }
  
  .group:hover .group-hover\:bg-purple-200 {
    background-color: #e9d5ff;
  }
  
  /* Gradiente animado */
  .bg-gradient-to-r {
    background-size: 200% 200%;
    animation: gradient 6s ease infinite;
  }
  
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  /* Mejoras de accesibilidad */
  .group:focus-within {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
</style>
