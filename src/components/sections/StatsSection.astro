---
// src/components/sections/StatsSection.astro
// Sección de impacto - Estadísticas del problema de incendios
---

<section class="py-16 bg-gray-900 sm:py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-white sm:text-4xl">
        El problema es real y urgente
      </h2>
      <p class="mt-4 text-lg text-gray-300 max-w-2xl mx-auto">
        Los incendios forestales en Córdoba causan pérdidas millonarias cada año. 
        Estos números representan el costo de no actuar a tiempo.
      </p>
    </div>
    
    <!-- Stats Grid -->
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
      
      <!-- Stat 1: Focos de Incendio -->
      <div class="flex flex-col items-center text-center">
        <div class="flex items-center justify-center w-16 h-16 bg-red-600 rounded-full mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
          </svg>
        </div>
        <div class="text-4xl font-bold text-white mb-2 counter" data-target="2847">0</div>
        <div class="text-sm text-gray-300 uppercase tracking-wide">Focos de incendio</div>
        <div class="text-xs text-gray-400 mt-1">Córdoba 2024</div>
      </div>
      
      <!-- Stat 2: Hectáreas -->
      <div class="flex flex-col items-center text-center">
        <div class="flex items-center justify-center w-16 h-16 bg-orange-600 rounded-full mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <div class="text-4xl font-bold text-white mb-2 counter" data-target="650000">0</div>
        <div class="text-sm text-gray-300 uppercase tracking-wide">Hectáreas quemadas</div>
        <div class="text-xs text-gray-400 mt-1">Pérdida ambiental</div>
      </div>
      
      <!-- Stat 3: Pérdidas Económicas -->
      <div class="flex flex-col items-center text-center">
        <div class="flex items-center justify-center w-16 h-16 bg-yellow-600 rounded-full mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <div class="text-4xl font-bold text-white mb-2">$<span class="counter" data-target="180">0</span>M</div>
        <div class="text-sm text-gray-300 uppercase tracking-wide">Pérdidas económicas</div>
        <div class="text-xs text-gray-400 mt-1">Millones de pesos</div>
      </div>
      
      <!-- Stat 4: Tiempo de Respuesta -->
      <div class="flex flex-col items-center text-center">
        <div class="flex items-center justify-center w-16 h-16 bg-green-600 rounded-full mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="text-4xl font-bold text-white mb-2"><span class="counter" data-target="3">0</span>min</div>
        <div class="text-sm text-gray-300 uppercase tracking-wide">Detección S.A.I.</div>
        <div class="text-xs text-gray-400 mt-1">vs 30min tradicional</div>
      </div>
    </div>
    
    <!-- Bottom Message -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center px-6 py-3 bg-gray-800 rounded-lg">
        <svg class="w-5 h-5 text-yellow-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        <span class="text-white font-medium">
          Cada minuto cuenta. La detección temprana salva vidas y recursos.
        </span>
      </div>
    </div>
  </div>
</section>

<script>
  // Counter animation cuando la sección es visible
  document.addEventListener('DOMContentLoaded', function() {
    const counters = document.querySelectorAll('.counter');
    const speed = 100; // Velocidad de la animación
    
    const animateCounters = () => {
      counters.forEach(counter => {
        const target = parseInt(counter.getAttribute('data-target'));
        const count = parseInt(counter.innerText);
        const increment = target / speed;
        
        if (count < target) {
          counter.innerText = Math.ceil(count + increment);
          setTimeout(animateCounters, 20);
        } else {
          counter.innerText = target.toLocaleString();
        }
      });
    };
    
    // Intersection Observer para activar cuando sea visible
    const observerOptions = {
      threshold: 0.7
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateCounters();
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);
    
    // Observar la sección
    const statsSection = document.querySelector('.bg-gray-900');
    if (statsSection) {
      observer.observe(statsSection);
    }
  });
</script>

<style>
  /* Mejoras visuales para los contadores */
  .counter {
    font-variant-numeric: tabular-nums;
    transition: all 0.3s ease;
  }
  
  /* Animación de aparición */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
</style>
