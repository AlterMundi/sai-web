---
// src/pages/en/index.astro
// F.A.S. Landing Page in English

import MainLayout from '../../layouts/MainLayout.astro';
import { getTranslations } from '../../i18n/utils.js';

const t = getTranslations('en');
---

<MainLayout title={t.meta.title} description={t.meta.description} lang="en">
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-orange-600 to-red-600 text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-6">
          {t.hero.title} <span class="text-yellow-300">{t.hero.titleHighlight}</span>
        </h1>
        <p class="text-xl mb-8 max-w-2xl mx-auto">
          {t.hero.subtitle}
        </p>
        <button class="bg-white text-orange-600 px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors">
          {t.hero.ctaPrimary}
        </button>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-16 bg-gray-900 text-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">{t.stats.title}</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
          <div class="bg-gray-800 p-6 rounded-lg">
            <div class="text-4xl font-bold text-red-400 mb-2">{t.stats.data.fires.number}</div>
            <div class="text-sm text-gray-300">{t.stats.data.fires.label}</div>
          </div>
          <div class="bg-gray-800 p-6 rounded-lg">
            <div class="text-4xl font-bold text-orange-400 mb-2">{t.stats.data.hectares.number}</div>
            <div class="text-sm text-gray-300">{t.stats.data.hectares.label}</div>
          </div>
          <div class="bg-gray-800 p-6 rounded-lg">
            <div class="text-4xl font-bold text-yellow-400 mb-2">{t.stats.data.losses.number}</div>
            <div class="text-sm text-gray-300">{t.stats.data.losses.label}</div>
          </div>
          <div class="bg-gray-800 p-6 rounded-lg">
            <div class="text-4xl font-bold text-green-400 mb-2">{t.stats.data.detection.number}</div>
            <div class="text-sm text-gray-300">{t.stats.data.detection.label}</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Form Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6">{t.form.title}</h2>
          <p class="text-gray-600 mb-8">{t.form.subtitle}</p>
          <button class="bg-orange-600 text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-orange-700 transition-colors">
            {t.form.submit}
          </button>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h3 class="text-xl font-bold mb-4">{t.footer.title}</h3>
        <p class="text-gray-400 mb-4">{t.footer.description}</p>
        <p class="text-gray-400">{t.footer.copyright}</p>
      </div>
    </footer>
  </main>
</MainLayout>
